<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/mainPageLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главная страница"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSendNewsletter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправить рассылку"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnViewNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Просмотр новостей"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnAddNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить новость"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnUserList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список пользователей"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
